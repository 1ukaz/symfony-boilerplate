# File managed by puppet

[user]
  name = <%= username %>
  email = <%= usermail %>
[color]
    branch = auto
    status = auto
    diff = auto
[alias]
    st = status -s --ignore-submodules
    up = svn rebase
    co = checkout
    ll = log --name-status --date=local
    di = diff --color-words -w --ignore-submodules
[difftool]
    prompt = false
[mergetool]
    prompt = false
    keepBackup = false
<% if @github_username %>
[github]
    user = <%= @github_username %>
<% end %>
<% if @kaleidoscope %>
[difftool "Kaleidoscope"]
    cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[diff]
    tool = Kaleidoscope
[mergetool "Kaleidoscope"]
    cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
    trustExitCode = true
[merge]
    tool = Kaleidoscope
<% end %>
